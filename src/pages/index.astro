---
import Card from "../components/Card.astro";
import PrimaryNavigation from "../components/PrimaryNavigation.astro";
import Layout from "../layouts/Layout.astro";
const title = "CUBE CSS core setup";
const href = "/";
---

<Layout title="Welcome to Astro.">
  <header role="banner" class="[ site-head ] [ bg-tertiary-glare ]">
    <div class="wrapper">
      <div class="site-head__inner">
        <h1 class="visually-hidden">Account overview</h1>
        <PrimaryNavigation
        <div class="user">
          <a href="#">My profile</a>
          <img src="/images/profile-image.jpg" width="50" height="50" alt="Profile image for Lorem Ipsum" />
        </div>
      </div>
    </div>
  </header>
  <article class="wrapper flow">
    <h1>CUBE CSS core setup</h1>
    <div class="switcher">
      <div>
        <h2 class="text-primary">A heading and paragraph in two columns</h2>
        <p>This is a subhead or something very similar. It promises to rain today but hasn't started here in Spring Valley yet.</p>
      </div>
      <div>
        <p>
          Donec sed odio dui. Donec sed odio dui. Vivamus sagittis lacus vel augue
          laoreet rutrum faucibus dolor auctor. Vivamus sagittis lacus vel augue
          laoreet rutrum faucibus dolor auctor. Praesent commodo cursus magna, vel
          scelerisque nisl consectetur et.
        </p>
        <Card href={href} title={title} body={"This is a card. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."} />
      </div>
    </div>
    <div class="grid" data-layout="twelfths">
      <p>one</p>
      <p>two</p>
      <p>three</p>
    </div>
  </article>
</Layout>
